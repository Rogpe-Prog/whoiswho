

<%- include ('navtwo.ejs') %>

<section id="about" class="bg-light text-dark">
        <div class="container">
          <div class="row">
            <div class="col-lg-12 mx-auto">
              <form method="POST">
                  <h2>Edit Who</h2>
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input value="<%= who.name %>" type="text" class="form-control" id="name" name="name" placeholder="Give name" aria-describedby="nameHelp">
                        
                        <% if(typeof errors == 'object' && errors) { %> 
                          <small id="nameHelp" class="form-text text-danger">Enter the name</small>
                        <% } %>
                        
                    </div>
                    <div class="form-group">
                        <label for="role">Position</label>
                        <input value="<%= who.role %>" type="text" class="form-control" id="role" name="role" placeholder="Give position" aria-describedby="roleHelp">
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input value="<%= who.email %>" type="text" class="form-control" id="email" name="email" placeholder="Give email" aria-describedby="emailHelp">
                    </div>
                  <button class="btn btn-secondary" >Save</button>
              </form>
            </div>
          </div>
        </div>
      </section>

<%- include ('footer') %>