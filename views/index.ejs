

<%- include ('./partials/nav.ejs') %>

<header class="bg-secondary text-white">
    <div class="container text-center">
      <h1>Welcome to Who is Who</h1>
      <p class="lead">Dev with a Bootstrap + Express + EJS + MongoDB.</p>
    </div>
</header>

  <section id="services" class="bg-light">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 mx-auto md-auto">
          
            <table class="table table-hover">
              <thead>
                <tr>
                  <th class="text-secondary">Name</th>
                  <th class="text-secondary">Position</th>
                  <th class="text-secondary">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% docs.forEach( doc => { %> 
                <tr>
                  <td>
                    <%= doc.name %>
                  </td> 
                  <td>
                    <%= doc.role %>
                  </td> 
                  <td>
                    <a class="text-secondary" href="/edit/<%= doc._id %>"><i class="fa fa-pencil text-success"></i></a>  ||   
                    <a class="text-secondary" href="/deletes/<%= doc._id %>"><i class="fa fa-trash text-danger"></i> </a>  
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>

        </div>
      </div>
    </div>
  </section>

